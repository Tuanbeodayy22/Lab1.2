<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <style>
        body {
            font-family: sans-serif;
            margin: 20px;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            background-color: #f4f4f4;
            padding: 20px;
            margin-bottom: 10px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #2196F3; /* Màu xanh dương */
        }

        p {
            color: #666;
        }
    </style>
</head>
<body>
<h1>Danh sách Chuyên Mục</h1>
<ul>
    <% categories.forEach(function(category) { %>
        <li>
            <h2><%= category.name %></h2>
            <p><%= category.description %></p>
        </li>
    <% }); %>
</ul>
</body>
</html>